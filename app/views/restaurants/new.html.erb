<div class="container">
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: Restaurant::CATEGORY %>
    <!-- <%= f.input :category %> -->
    <%= f.input :phone_number %>
    <%= f.submit "Submit", class: "btn btn-outline-dark btn-sm" %>
  <% end %>
</div>
