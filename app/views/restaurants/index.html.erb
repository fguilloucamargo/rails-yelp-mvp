<div class="container">
  <h1>Restaurant list</h1>
  <ul class="list-group">
    <div>
      <% @restaurants.each do |restaurant| %>
      <li>
        <h3><%= restaurant.name %></h3>
        <p><%= restaurant.category.capitalize %> - <%= restaurant.address %></p>
        <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-outline-dark btn-sm"%>
      </li>
      <% end %>
    </div>
  </ul>
</div>
